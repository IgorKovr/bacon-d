{
  "openapi": "3.1.0",
  "info": {
    "title": "PitchBook API",
    "description": "Search for companies matching the specified criteria.",
    "version": "1.0.0",
    "custom_headers": [
      {
        "key": "Authorization",
        "value": "PB-Token i7pFyWrn7lAMzlUEMewkfIB5cq8qjG8u"
      }
    ]
  },
  "servers": [
    {
      "url": "https://api.pitchbook.com"
    }
  ],
  "paths": {
    "/companies/search": {
      "get": {
        "summary": "Company Search",
        "description": "Retrieves companies matching the specified search criteria.",
        "operationId": "searchCompanies",
        "parameters": [
          {
            "name": "companyNames",
            "in": "query",
            "description": "Comma-separated list of company names, IDs, websites, or tickers.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "ownershipStatus",
            "in": "query",
            "description": "Filter companies by ownership status.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "PVTB",
                "ACQ",
                "PVTNB"
              ]
            }
          },
          {
            "name": "backingStatus",
            "in": "query",
            "description": "Filter companies by backing status.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "VCB",
                "PEB",
                "ACCIB"
              ]
            }
          },
          {
            "name": "businessStatus",
            "in": "query",
            "description": "Filter companies by business status.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "STAR"
              ]
            }
          },
          {
            "name": "city",
            "in": "query",
            "description": "Filter companies by city.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "stateProvince",
            "in": "query",
            "description": "Filter companies by state or province.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "country",
            "in": "query",
            "description": "Comma-separated list of country codes (e.g., USA, GBR, DEU, IND).",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "postCode",
            "in": "query",
            "description": "Filter companies by postal code.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "locationType",
            "in": "query",
            "description": "Specify the location type: HQ_ONLY, NON_HQ_ONLY, or ANY.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "HQ_ONLY",
                "NON_HQ_ONLY",
                "ANY"
              ]
            }
          },
          {
            "name": "dateFounded",
            "in": "query",
            "description": "Filter by companies founded after/before or between dates (YYYY-MM-DD).",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dealType",
            "in": "query",
            "description": "Filter companies by the type of deal.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "EVC",
                "LVC",
                "BYSTG",
                "LBO"
              ]
            }
          },
          {
            "name": "dealDate",
            "in": "query",
            "description": "Filter companies by deal date. Use operators >, <, or ^.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "totalRaised",
            "in": "query",
            "description": "Find companies by the total amount raised in millions.",
            "required": false,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "perPage",
            "in": "query",
            "description": "Number of results per page.",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 25
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "The page number to retrieve.",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of companies that match the search criteria.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "companies": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Company"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid or missing parameters."
          },
          "401": {
            "description": "Unauthorized - Invalid API key."
          },
          "402": {
            "description": "Payment Required - Insufficient API credits."
          },
          "404": {
            "description": "Not Found - No matching companies found."
          },
          "429": {
            "description": "Too Many Requests - Rate limit exceeded."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Company": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "foundedDate": {
            "type": "string",
            "format": "date"
          },
          "totalRaised": {
            "type": "number"
          },
          "dealType": {
            "type": "string"
          }
        }
      }
    }
  }
}